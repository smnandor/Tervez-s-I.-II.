@model IFURETE2.Models.Delivery

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="actual_amount" class="control-label"></label>
                <input asp-for="actual_amount" class="form-control" />
                <span asp-validation-for="actual_amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="delivered" /> @Html.DisplayNameFor(model => model.delivered)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="weighed" /> @Html.DisplayNameFor(model => model.weighed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="denied" /> @Html.DisplayNameFor(model => model.denied)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

