@model IEnumerable<IFURETE2.Models.Site>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NameOfContact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailAddressOfContact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhonenumberOfContact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpenFrom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpenTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfTrucks)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddressOfContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhonenumberOfContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTrucks)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
